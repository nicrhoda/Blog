<div class="post">
    <div class="card-header">
        <h2>Update Post</h2>
    </div>
    <form class="card-body" id="updateForm">
        <input type="hidden" id="userId" value="{{renderPost.user_id}}" />
        <input type="hidden" id="postId" value="{{renderPost.id}}"/>
        <label class="form-label" for="post-heading">Post Heading</label>
        <input type="text" id="heading" value="{{renderPost.heading}}" />

        <label class="form-label" for="post-content">Post Content</label>
        <textarea class="form-input" id="content">{{renderPost.content}}</textarea>

    </form>
        <button type="button" class="btn" id="updtBtn">Add changes</button>
    <button type="button" class="btn" id="dltBtn">Delete Post</button>
</div>

<script src="/js/update.js"></script>